@model homework.Models.Note

@{
    ViewData["Title"] = "Создать заметку";
}

<div class="container mt-4">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Заголовок</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Содержание</label>
            <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Tags" class="form-label">Теги (через запятую)</label>
            <input type="text" class="form-control" name="tags" value="@(Model?.Tags != null ? string.Join(", ", Model.Tags) : "")" />
        </div>

        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
