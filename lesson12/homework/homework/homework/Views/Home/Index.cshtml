@model List<homework.Models.Note>  // Ожидаем список заметок

@{
    ViewData["Title"] = "Заметки";
}

<div class="container mt-4">
    <h1 class="display-4">Все заметки</h1>

    @foreach (var note in Model) {
        <div class="card p-3 mb-3">
            <h2>@note.Title</h2>
            <p class="text-muted">Создано: @note.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
            <p>@note.Content</p>

            <h5 class="mt-3">Теги:</h5>
            <ul class="list-inline">
                @foreach (var tag in note.Tags) {
                    <li class="list-inline-item badge bg-primary text-white">@tag</li>
                }
            </ul>
        </div>
    }

    <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Создать заметку</a>
</div>
